<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CougBites.Views.AboutPage"
             xmlns:vm="clr-namespace:CougBites.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid BackgroundColor="#4D4D4D" RowSpacing="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0"
                     Orientation="Horizontal"
                     BackgroundColor="White">
         
                <Button HorizontalOptions="StartAndExpand"
                        ScaleY="0.5"
                        ScaleX="0.5"
                        Text="LeftTemp"/>
                <Button HorizontalOptions="CenterAndExpand"
                        Text="Food Option" FontSize="16" TextColor="Black"/>
                <Button HorizontalOptions="EndAndExpand"
                        ScaleY="0.5"
                        ScaleX="0.5"
                        Text="RightTemp"/>
                
            </StackLayout>

        <StackLayout Grid.Row="1"
                     Orientation="Horizontal"
                     BackgroundColor="White">
            <Button HorizontalOptions="StartAndExpand"
                    ScaleY="0.5"
                    ScaleX="0.5"
                    Text="LeftTemp"/>
            <Button HorizontalOptions="CenterAndExpand"
                    Text="Food Option" FontSize="16" TextColor="Black"/>
            <Button HorizontalOptions="EndAndExpand"
                    ScaleY="0.5"
                    ScaleX="0.5"
                    Text="RightTemp"/>

        </StackLayout>

        <StackLayout Grid.Row="2"
                     Orientation="Horizontal"
                     BackgroundColor="White">
            <Button HorizontalOptions="StartAndExpand"
                    ScaleY="0.5"
                    ScaleX="0.5"                    
                    Text="LeftTemp"/>
            <Button HorizontalOptions="CenterAndExpand"
                    Text="Food Option" FontSize="16" TextColor="Black"/>
            <Button HorizontalOptions="EndAndExpand"
                    ScaleY="0.5"
                    ScaleX="0.5"                    
                    Text="RightTemp"/>

        </StackLayout>

